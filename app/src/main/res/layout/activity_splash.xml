<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_luci">

    <!-- Logo con efecto de brillo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_luciernaga_logo"
        android:contentDescription="@string/logo_luci_rnaga"
        android:elevation="8dp"
        android:outlineSpotShadowColor="@color/neon_yellow"/>

    <!-- Contenedor de texto -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <!-- Nombre de la app con sombra -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/luci_rnaga"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:letterSpacing="0.03"
            android:shadowColor="@color/neon_yellow_alpha"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="12"/>

        <!-- VersiÃ³n con estilo moderno -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/v2_0"
            android:textColor="@color/neon_yellow"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:letterSpacing="0.1"/>
    </LinearLayout>
</RelativeLayout>